<addons>
<addon id="plugin.video.aminflix" name="AMINFLIX" version="1.0.0" provider-name="Amini">
  <requires>
    <import addon="xbmc.python" version="3.0.0" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary>Netflix-style Kodi Addon</summary>
    <description>AMINFLIX includes movies, TV, live sports with Real-Debrid and scraper support.</description>
    <platform>all</platform>
    <icon>resources/media/football.png</icon>
    <fanart>resources/media/sports_events.png</fanart>
  </extension>
</addon>
<addon id="repository.aminflix" name="AMINFLIX Repository" version="1.0.0" provider-name="Amini">
  <extension point="xbmc.addon.repository" name="AMINFLIX Repository">
    <info compressed="false">https://dowcode.github.io/aminflix-repo/addons.xml</info>
    <checksum>https://dowcode.github.io/aminflix-repo/addons.xml.md5</checksum>
    <datadir zip="true">https://dowcode.github.io/aminflix-repo/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>AMINFLIX Kodi Addon Repository</summary>
    <description>Auto-update repository for AMINFLIX addon</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>